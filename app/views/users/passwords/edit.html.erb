<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 mx-md-auto">
      <div class="card mt-5 mb-5 shadow">
        <div class="card-header">
          <h5 class="text-center">Change your password</h5>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, id: "user_edit_password" }) do |f| %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group pl-4 pr-4 mt-4">
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
            </div>

            <div class="form-group pl-4 pr-4 mt-4">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Password" %>
            </div>

            <div class="form-group pl-4 pr-4 mt-4">
              <%= f.submit "Change my password", class: "btn btn-primary btn-block" %>
            </div>

            <%= render "admins/shared/links", class: "text-dark font-weight-bold" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>



