<div class="row">
  <div class="col-12">
    <div class="card-body">
      <%= form_for [:admin, @seller], html: { class: "form-material m-t-40" } do |f| %>
          
        <% if @seller.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@seller.errors.count, "error") %> prohibited this seller from being saved:</h2>

            <ul>
            <% @seller.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
            </ul>
          </div>
        <% end %>

        <div class="form-group">
          <label>First name </label>
          <%= f.text_field :first_name, placeholder: "Enter first name", class: "form-control form-control-line", required: true %>
        </div>
        <div class="form-group">
          <label>Last name </label>
          <%= f.text_field :last_name, placeholder: "Enter last name", class: "form-control form-control-line", required: true %>
        </div>
        <div class="form-group">
          <label>Email </label>
          <%= f.email_field :email, placeholder: "Enter email", class: "form-control form-control-line", required: true %>
        </div>
        <div class="form-group">
          <label>Last name </label>
          <%= f.text_field :contact_number, placeholder: "Enter Contact Number", class: "form-control form-control-line", required: true %>
        </div>
        <div class="form-group">
          <label>Password </label>
          <%= f.password_field :password, placeholder: "Enter password", class: "form-control form-control-line" %>
        </div>

        <div class="form-group">
          <%= f.submit 'Save User', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>
