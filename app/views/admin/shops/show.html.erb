<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col-md-9 mx-md-auto">
      <div class="card p-4">
        <p>
          <strong>Name:</strong>
          <%= @shop.name %>
        </p>

        <p>
          <strong>Contact1:</strong>
          <%= @shop.contact1 %>
        </p>

        <p>
          <strong>Contact2:</strong>
          <%= @shop.contact2 %>
        </p>

        <p>
          <strong>Email:</strong>
          <%= @shop.email %>
        </p>

         <p>
          <strong>Fax:</strong>
          <%= @shop.fax %>
        </p>

         <p>
          <strong>Address:</strong>
          <%= @shop.address %>
        </p>

        <div>
          <%= link_to 'Edit', edit_admin_shop_path(@shop) %> |
          <%= link_to 'Back', admin_shops_path %>
        </div>
      </div>
    </div>
  </div>
</div>


