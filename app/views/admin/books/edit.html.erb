<div class="container mt-5 mb-5">
  <%= link_to admin_books_path , class: "btn btn-outline-primary" do %>
    <small><i class="fas fa-arrow-left mr-2"></i>Back</small>
  <% end %>
  <%= link_to admin_book_path(@book), class: "btn btn-outline-secondary" do %>
    <small><i class="fas fa-arrow-left mr-2"></i>Show</small>
  <% end %>
  <div class="row">
    <div class="col-md-8 mx-md-auto mt-5">
      <div class="card">
        <div class="card-header">
          <h4>Editing Book</h4>
        </div>
        <div class="card-body">
          <%= render 'form', book: @book %>
        </div>
      </div>
    </div>
  </div>
</div>

