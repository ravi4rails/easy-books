<div class="container mt-5 ">
  <h1>Books</h1>
  <%= search_form_for @q, url: :admin_books do |f| %>
    <div class="col-md-12">
      <div class="row">
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :name %>
            <%= f.search_field :name_cont, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :price %>
            <%= f.number_field :price_eq, class: "form-control" %>
          </div>
        </div>
        <div class="col-md-4">
          <div class="form-group">
            <%= f.label :detail %>
            <%= f.search_field :detail_cont, class: "form-control" %>
          </div>
        </div>
        <div class="form-group ml-3">
          <%= f.submit "Search", class: "btn btn-primary" %>
          <%= link_to "Reset", admin_books_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  <% end %>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Price</th>
          <th>Detail</th>
          <th>Front cover image</th>
          <th>Back cover image</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @books.each do |book| %>
          <tr>
            <td><%= book.name %></td>
            <td><%= book.price %></td>
            <td><%= book.detail %></td>
            <td class="w-25"><%= image_tag book.front_cover_image, class: "w-50" %></td>
            <td class="pl-0"><%= image_tag book.back_cover_image, class: "w-50" %></td>
            <td>
              <div class="dropdown">
                <button type="button" class="btn btn-outline-secondary" data-toggle="dropdown">
                  Action<i class="fas fa-angle-down ml-2"></i>
                </button>
                <div class="dropdown-menu">
                  <%= link_to 'Show', admin_book_path(book), class: "dropdown-item"%>
                  <%= link_to 'Edit', edit_admin_book_path(book), class: "dropdown-item"%>
                  <%= link_to 'Destroy', admin_book_path(book), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item"  %>
                </div>
              </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="add-book-btn mt-5">
      <%= link_to 'New Book', new_admin_book_path, class: "btn btn-outline-primary" %>
    </div>
  </div>
</div>
