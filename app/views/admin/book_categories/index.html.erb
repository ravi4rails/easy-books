<h4 class="mt-5">Book Categories</h4>
<%= search_form_for @q, url: :admin_book_categories do |f| %>
    <div class="row">
      <div class="col-md-12">
        <div class="form-group">
          <%= f.label :name %>
          <%= f.search_field :name_cont, class: "form-control" %>
        </div>
      </div>
      <div class="col-md-12">
        <div class="form-group">
          <%= f.submit "Search", class: "btn btn-primary" %>
          <%= link_to "Reset", admin_book_categories_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
<% end %>
<div class="table-responsive">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @book_categories.each do |book_category| %>
        <tr>
          <td><%= book_category.name %></td>
          <td>
            <div class="dropdown">
              <button type="button" class="btn btn-outline-secondary" data-toggle="dropdown">
                Action<i class="fas fa-angle-down ml-2"></i>
              </button>
              <div class="dropdown-menu">
                <%= link_to 'Show', admin_book_category_path(book_category), class: "dropdown-item"%>
                <%= link_to 'Edit', edit_admin_book_category_path(book_category), class: "dropdown-item"%>
                <%= link_to 'Destroy', admin_book_category_path(book_category), method: :delete, data: { confirm: 'Are you sure?' }, class: "dropdown-item"  %>
              </div>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="add-book-btn mt-5">
    <%= link_to 'Add Book Category', new_admin_book_category_path, class: "btn btn-outline-primary" %>
  </div>
</div>